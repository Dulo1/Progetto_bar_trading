{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist", // Dice a TypeScript di mettere i file .js compilati in una cartella 'dist'
    "rootDir": "./src",  // Specifica che il codice sorgente Ã¨ in 'src'
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Compila solo i file dentro la cartella 'src'
  "exclude": ["node_modules"]
}
